<h3 class="m-0 mb-4">Productos</h3>
{{#if products.length}}
<div class="row row-cols-1 row-cols-md-3 g-4" id="products">
    {{#each products}}
    <div class="col">
        <div class="card" style="width: 18rem;">
            <img src="{{this.thumbnail}}" class="card-img-top product-img" alt="{{this.title}}" />
            <div class="card-body">
                <h5 class="card-title">{{this.title}} - ${{this.price}}</h5>
                {{!-- <form method="post" action="/api/productos/{{this.id}}?_method=delete" >
                    <button type="submit">Delete</button>
                </form> --}}
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<h2>we donÂ´t have any product</h2>
{{/if}}